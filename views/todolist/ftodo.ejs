<div class="row">
    <div class="col-md-12">
        <h4>Form for TodoList</h4>
    </div>
    <div class="col-md-6">
        <form action="<%= baseURL %>/admin/saveTodo" method="post">
            <div class="form-group">
                <label for=""> Title *</label>
                <input type="text" name="title" class="form-control" required>
            </div>
            <div class="form-group">
                <label for=""> Description *</label>
                <input type="text" name="description" class="form-control" required>
            </div>
            
            <button class="btn btn-prymary"><i class="fa fa-save"></i> Save </button>
        </form>
    </div>
</div>