<div class="row">
    <div class="col-md-12">
        <h4>Form for New User</h4>
    </div>
    <div class="col-md-6">
        <form action="<%= baseURL %>/admin/updateUser" method="post">
            <div class="form-group">
                <label for=""> Name *</label>
                <input type="text" name="name" value="<%= user.name %>" class="form-control" required>
            </div>
            <input type="hidden" name="id" value="<%= user.id %> ">
            <div class="form-group">
                <label for=""> Username *</label>
                <input type="text" name="username" value="<%= user.username %> " class="form-control" required>
            </div>
            <div class="form-group">
                <label for=""> Email *</label>
                <input type="email" name="email" value="<%= user.email %> " class="form-control" required>
            </div> 
            <div class="form-group">
                <label for=""> Password </label>
                <input type="password" name="password" value="" placeholder="fill if only you want to change the password" class="form-control" >
            </div>
            <button class="btn btn-prymary"><i class="fa fa-save"></i> Save </button>
        </form>
    </div>
</div>